<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dabeeo.hangouyou"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dabeeo.hangouyou.IntroActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dabeeo.hangouyou.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <!-- Sub Activities -->
        <activity
            android:name="com.dabeeo.hangouyou.activities.sub.GuideActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dabeeo.hangouyou.activities.sub.MyPageSettingActivity"
            android:label="@string/term_setting"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.dabeeo.hangouyou.activities.sub.VersionActivity"
            android:label="@string/term_version_info"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
    </application>

</manifest>