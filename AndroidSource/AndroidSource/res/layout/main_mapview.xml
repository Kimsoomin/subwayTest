<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-3dip" >

        <LinearLayout
            android:id="@+id/layout_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="3dip"
            android:background="@color/background_light_gray" >

            <ImageButton
                android:id="@+id/Backbutton"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:background="@drawable/icon_back_arrow" />

            <ImageButton
                android:id="@+id/filter_city_search_button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/Backbutton"
                android:background="@drawable/input_search01"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="30dp"
                android:text="test"
                android:textColor="#A5A5A5"
                android:textSize="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/zoomInbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/btn_map_zoom_in_state" />

        <ImageButton
            android:id="@+id/zoomOutbtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="98dp"
            android:background="@drawable/btn_map_zoom_out_state" />

        <FrameLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:alpha="1" >

            <ImageButton
                android:id="@+id/nearbyBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_map_nearby_state" />

            <ImageButton
                android:id="@+id/myLocationBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_my_location" />

            <ImageButton
                android:id="@+id/subwayBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="73dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_map_subway_state" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/summaryView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:visibility="invisible" >
            
            <ImageButton 
                android:id="@+id/summaryCloseBtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_box_close"
                android:layout_gravity="center_horizontal"/>
            
            <ImageView 
                android:id="@+id/summaryImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/gray"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"/>
            
            <TextView
                android:id="@+id/summaryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="20sp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="40dp" />
                   
            <TextView
                android:id="@+id/summarySubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="test"
                android:textSize="12sp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="60dp" />
            
            <ImageView 
                android:id="@+id/summarylikeImage"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/icon_like_s"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="80dp"/>
            
            <TextView 
                android:id="@+id/summarylikecount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:layout_marginTop="81dp"
                android:layout_marginLeft="102dp"/>
            
            <ImageButton 
                android:id="@+id/naviBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/navi_btn"/>
            
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                
                <ImageView 
                    android:id="@+id/subwayImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/icon_map_subway"/>

                <Button
                    android:id="@+id/subwaystartBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/map_subway_start"
                    android:textSize="12sp" 
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/subwayendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="@string/map_subway_end"
                    android:textSize="12sp"
                    android:textAlignment="center" />                
            </LinearLayout>

        </FrameLayout>

        <!-- 
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:alpha="0.2"
            android:text="â“’OpenStreetMap contributors(CC-BY-SA)"
            android:textColor="#515151"
            android:textSize="10sp" />
             -->
    </FrameLayout>

</LinearLayout>