<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:padding="3dp" android:shape="rectangle">
            <solid android:color="@color/appcolor" />

            <corners android:radius="0dp"
                android:bottomLeftRadius="3dp" android:bottomRightRadius="0dp"
                android:topLeftRadius="3dp" android:topRightRadius="0dp"  />
        </shape></item>
    <item android:state_activated="true"><shape android:padding="3dp" android:shape="rectangle">
            <solid android:color="@color/appcolor" />

            <corners android:radius="0dp"
                android:bottomLeftRadius="3dp" android:bottomRightRadius="0dp"
                android:topLeftRadius="3dp" android:topRightRadius="0dp"  />
        </shape></item>
    <item><shape android:padding="3dp" android:shape="rectangle">
            <corners android:radius="0dp"
                android:bottomLeftRadius="3dp" android:bottomRightRadius="0dp"
                android:topLeftRadius="3dp" android:topRightRadius="0dp" />

            <stroke android:width="1dp" android:color="@color/gray" />

            <solid android:color="@android:color/transparent" />
        </shape></item>

</selector>